    {
      "parameters": {
        "jsCode": "// Extract trending topics from Hacker News\nconst html = $input.first().json.data;\nconst topics = [];\n\n// Regex to match title lines with links\nconst titleRegex = /<span class=\"titleline\"><a href=\"[^\"]*\"[^>]*>(.*?)<\\/a>/g;\n\nlet match;\nlet count = 0;\n\nwhile ((match = titleRegex.exec(html)) !== null && count < 30) {\n  // Decode HTML entities and clean up the title\n  let title = match[1]\n    .replace(/&#x2F;/g, '/')\n    .replace(/&#x27;/g, \"'\")\n    .replace(/&quot;/g, '\"')\n    .replace(/&amp;/g, '&')\n    .replace(/<[^>]*>/g, ''); // Remove any remaining HTML tags\n  \n  topics.push({\n    title: title,\n    rank: count + 1,\n    date: new Date().toISOString().split('T')[0] // Today's date in YYYY-MM-DD format\n  });\n  \n  count++;\n}\n\nreturn [{ \n  json: { \n    topics: topics,\n    extractedAt: new Date().toISOString(),\n    source: 'Hacker News',\n    totalTopics: topics.length\n  } \n}];"
      },
